  <% if article.errors.any? %>
  <div class="bg-red-300 mb-8">
    <h2 class="text-2xl text-red-500 font-bold"><%= article.errors.count%>件のエラーが発生しました</h2>
    <ul>
      <% article.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  
  <%= form_with(model: article) do |f| %>
    <div class="bg-gray-100 py-4 border-t-1 border-b-1 border-gray-300">
      <div class="flex items-center">
        <%= f.label :title, "タイトル", class: "text-xl font-semibold block text-center mb-2 w-1/4" %>
        <span class="bg-red-500 text-white p-1 w-24 rounded-sm font-semibold mr-4">※必須</span>
        <%= f.text_field :title, class: "block w-full border p-2 rounded-sm mt-2" %>
      </div>
    </div>

    <div class="bg-gray-100 py-4 border-t-1 border-b-1 border-gray-300">
      <div class="flex items-center">
      <%= f.label :body, "内容", class: "text-xl font-semibold text-center block mb-2 w-1/4" %>
      <span class="bg-red-500 text-white p-1 w-24 rounded-sm font-semibold mr-4">※必須</span>
      <%= f.text_area :body, class: "border w-full p-2 rounded-sm mt-2" %>
      </div>
    </div>

    <div class="flex justify-center items-center mb-4 space-x-8">
      <%= f.submit @article.new_record? ? "作成する" : "更新する", class: "inline-block text-center w-32 bg-blue-500 text-white px-6 py-2 my-4 rounded-md hover:bg-blue-600 transition" %>
      <%= link_to '記事一覧', articles_path, class: "inline-block text-center w-32 bg-green-500 text-white p-2 rounded-md hover:bg-green-600 transition" %>
    </div>
  <% end %>