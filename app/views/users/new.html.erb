
<% if @user.errors.any? %>
  <div class="bg-red-300 my-8">
    <h2 class="text-2xl text-red-500 font-bold">
      <%= @user.errors.count%>件のエラーが発生しました
    </h2>
    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="mx-auto p-4 bg-white rounded-lg shadow-lg w-96 mt-8">
  <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">新規登録</h2>
  <%= form_with(model: @user) do |f| %>
    <div class="mb-4">
      <%= f.label :name, '名前',class: 'block text-sm font-medium text-gray-700' %>
      <%= f.text_field :name, class: 'mt-1 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm' %>
    </div>
    <div class="mb-4">
      <%= f.label :email, 'メールアドレス',class: 'block text-sm font-medium text-gray-700' %>
      <%= f.email_field :email, class: 'mt-1 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm' %>
    </div>
    <div class="mb-4">
      <%= f.label :password, 'パスワード',class: 'block text-sm font-medium text-gray-700' %>
      <%= f.password_field :password, class: 'mt-1 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm' %>
    </div>
    <div class="mb-4">
      <%= f.label :password_confirmation, 'パスワード確認',class: 'block text-sm font-medium text-gray-700' %>
      <%= f.password_field :password_confirmation, class: 'mt-1 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm' %>
    </div>
    <%= f.hidden_field :referer, value: flash[:referer] || '' %>
    <div class="mb-4">
      <%= f.submit '登録', class: 'w-full bg-sky-500 text-white py-2 px-4 rounded-md shadow hover:bg-sky-600' %>
    </div>
  <% end %>
</div>
